<!DOCTYPE html>

<head>
    <title>Crud Operation</title>
    <link type="text/css" rel="stylesheet" href="/style.css">
</head>

<body>
    <form action="/api/personnes/edit-person" method="post">
        <input type="hidden" id="editPersonId" name="personId" value="<%= person.id %>">

        <div>
            <label for="nom">Full nom</label>
            <input type="text" value="<%= person.nom %>" name="nom" id="nom">
        </div>
        <div>
            <label for="email">Email</label>
            <input type="text" value="<%= person.email %>" name="email" id="email">
        </div>
        <div>
            <label for="phone">Phone</label>
            <input type="number" value="<%= person.phone %>" name="phone" id="phone">
        </div>
        <div>
            <label for="nni">nni</label>
            <input type="number" value="<%= person.nni %>" name="nni" id="nni">
        </div>
        <div>
            <label for="salary">Salary</label>
            <input type="number" value="<%= person.salary %>" name="salary" id="salary">
        </div>
        <div>
            <label for="department">Department</label>
            <input type="text" value="<%= person.department %>" name="department" id="department">
        </div>
        <div>
            <label for="nbPres">Nb Prescent</label>
            <input type="number" value="<%= person.nbPres %>" name="nbPres" id="nbPres">
        </div>
        <div>
            <label for="nbAbs">Nb Absent</label>
            <input type="number" value="<%= person.nbAbs %>" name="nbAbs" id="nbAbs">
        </div>

        <div class="form_action--button"> <button type="submit">Edit Person</button>

        </div>
    </form>
    <script type="text/javascript" src="/script.js"></script>
</body>

</html>