<!DOCTYPE html>

<head>
    <title>Crud Operation</title>
    <!-- <link type="text/css" rel="stylesheet" href="/style.css">-->


    <link rel="stylesheet" href="assets/css/style.css">


</head>


<body>
    <!-- =============== Navigation ================ -->
    <div class="container">
        <div class="navigation">
            <ul>
                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="logo-apple"></ion-icon>
                        </span>
                        <span class="title">Brand Name</span>
                    </a>
                </li>

                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="home-outline"></ion-icon>
                        </span>
                        <span class="title">Dashboard</span>
                    </a>
                </li>

                <li>
                    <a href="/add-person">
                        <span class="icon">
                            <ion-icon name="people-outline"></ion-icon>
                        </span>
                        <span class="title">Add New Enseignant</span>
                    </a>
                </li>



                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="log-out-outline"></ion-icon>
                        </span>
                        <span class="title">Sign Out</span>
                    </a>
                </li>
            </ul>
        </div>

        <!-- ========================= Main ==================== -->
        <div class="main">
            <div class="topbar">
                <div class="toggle">
                    <ion-icon name="menu-outline"></ion-icon>
                </div>

                <div class="search">
                    <label>
                        <input type="text" placeholder="Search here" id="searchInput">

                        <ion-icon name="search-outline"></ion-icon>
                    </label>
                </div>

                <div class="user">
                    <img src="assets/imgs/customer01.jpg" alt="">
                </div>
            </div>

            <!-- ======================= Cards ================== -->
            <div class="cardBox">
                <div class="card">
                    <div>
                        <div class="numbers">
                            <%= totalUsers %>
                        </div>
                        <div class="cardName">Total Users</div>
                    </div>

                    <div class="iconBx">
                        <ion-icon name="person-outline"></ion-icon>
                    </div>
                </div>

                <div class="card">
                    <div>
                        <div class="numbers">
                            <%= absenteeismRate %>
                        </div>
                        <div class="cardName">Taux d'absenteisme</div>
                    </div>

                    <div class="iconBx">
                        <ion-icon name="person-outline"></ion-icon>
                    </div>
                </div>

                <div class="card">
                    <div>
                        <div class="numbers">
                            <%= averageSalary %>$
                        </div>
                        <div class="cardName">Salaire Moyen</div>
                    </div>

                    <div class="iconBx">
                        <ion-icon name="cash-outline"></ion-icon>
                    </div>
                </div>

                <div class="card">
                    <div>
                        <div class="numbers">
                            <%= totalSalaries %>$
                        </div> <!-- 2,245.354$ -->
                        <div class="cardName">Total Salary</div>
                    </div>

                    <div class="iconBx">
                        <ion-icon name="cash-outline"></ion-icon>
                    </div>
                </div>
            </div>


            <!-- ================ Order Details List ================= -->
            <div class="details">
                <div class="recentOrders">
                    <div class="cardHeader">
                        <h2>Recent Orders</h2>
                    </div>

                    <table>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Full name</th>
                                <th>email</th>
                                <th>Phone</th>
                                <th>Nni</th>
                                <th>Salary</th>
                                <th>Department</th>
                                <th>Nb Present</th>
                                <th>Nb Absent</th>
                                <th>action</th>
                                <th>edit</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% data.forEach(user=> { %>
                                <r>
                                    <td>
                                        <%= user.id %>
                                    </td>
                                    <td>
                                        <%= user.nom %>
                                    </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <%= user.phone %>
                                    </td>
                                    <td>
                                        <%= user.nni %>
                                    </td>
                                    <td>
                                        <%= user.salary %>
                                    </td>
                                    <td>
                                        <%= user.department %>
                                    </td>
                                    <td>
                                        <%= user.nbPres %>
                                    </td>
                                    <td>
                                        <%= user.nbAbs %>
                                    </td>
                                    <td>
                                        <form action="/delete-person" method="post">
                                            <input type="hidden" name="personId" value="<%= user.id %>">
                                            <button type="submit">Delete</button>
                                        </form>
                                    </td>
                                    <td><button> <a href="/edit-person/<%= user.id %>">Edit</a></button></td>
                                    </tr>
                                    <% }); %>
                        </tbody>
                    </table>
                </div>

                <!-- ================= New Customers ================ -->

            </div>
        </div>
    </div>



    <!-- =========== Scripts =========  -->
    <script src="assets/js/main.js"></script>

    <!-- ====== ionicons ======= -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script>
        function searchUsers() {
            const searchQuery = document.getElementById('searchInput').value;

            axios.get('/users', { params: { nom: searchQuery } })
                .then(response => {
                    // Handle the response and update the UI with search results
                })
                .catch(error => {
                    console.error('Error searching users:', error);
                    // Handle errors
                });
        }
    </script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>

</html>